<form class="clock-dialog">
  <div class="clock-form-group">
    <label>{{localize "COGSYNDICATE.ClockName"}}</label>
    <input type="text" name="name" value="{{clock.name}}" placeholder="{{localize 'COGSYNDICATE.ClockNamePlaceholder'}}" />
  </div>
  <div class="clock-form-group">
    <label>{{localize "COGSYNDICATE.ClockDescription"}}</label>
    <textarea name="description" placeholder="{{localize 'COGSYNDICATE.ClockDescriptionPlaceholder'}}">{{clock.description}}</textarea>
  </div>
  <div class="clock-form-group">
    <label>Kategoria</label>
    <select name="category">
      <option value="mission" {{#if (eq clock.category "mission")}}selected{{/if}}>Misja</option>
      <option value="combat" {{#if (eq clock.category "combat")}}selected{{/if}}>Walka</option>
      <option value="other" {{#if (eq clock.category "other")}}selected{{/if}}>Inne</option>
    </select>
  </div>
  <div class="clock-form-group">
    <label>{{localize "COGSYNDICATE.ClockMax"}}</label>
    <select name="max">
      <option value="2" {{#if (eq clock.max 2)}}selected{{/if}}>2</option>
      <option value="3" {{#if (eq clock.max 3)}}selected{{/if}}>3</option>
      <option value="4" {{#if (eq clock.max 4)}}selected{{/if}}>4</option>
      <option value="5" {{#if (eq clock.max 5)}}selected{{/if}}>5</option>
      <option value="6" {{#if (eq clock.max 6)}}selected{{/if}}>6</option>
      <option value="7" {{#if (eq clock.max 7)}}selected{{/if}}>7</option>
      <option value="8" {{#if (eq clock.max 8)}}selected{{/if}}>8</option>
      <option value="9" {{#if (eq clock.max 9)}}selected{{/if}}>9</option>
      <option value="10" {{#if (eq clock.max 10)}}selected{{/if}}>10</option>
      <option value="11" {{#if (eq clock.max 11)}}selected{{/if}}>11</option>
      <option value="12" {{#if (eq clock.max 12)}}selected{{/if}}>12</option>
    </select>
  </div>
</form>