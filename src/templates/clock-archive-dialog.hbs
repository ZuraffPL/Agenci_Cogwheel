<div class="archive-content" style="position: relative; z-index: 1;">
  {{#if noClocks}}
    <div class="empty-archive" style="text-align: center; padding: 40px 20px; color: #d4a574; font-size: 1.1em;">
      <i class="fas fa-archive" style="font-size: 3em; margin-bottom: 15px; color: #cd7f32; opacity: 0.6; display: block;"></i>
      <p>{{localize "COGSYNDICATE.NoArchivedClocks"}}</p>
    </div>
  {{else}}
    <div class="archived-clocks-list">
      {{#each archivedClocks as |clock index|}}
        <div class="archived-clock-item" data-index="{{index}}" style="display: flex; flex-direction: row; align-items: center; gap: 15px; border: 2px solid #8B4513; border-radius: 6px; padding: 12px; margin-bottom: 12px; min-height: 100px; background: linear-gradient(135deg, rgba(61, 40, 23, 0.7) 0%, rgba(74, 50, 29, 0.7) 50%, rgba(44, 24, 16, 0.7) 100%); box-shadow: inset 0 1px 2px rgba(205, 127, 50, 0.2), 0 2px 4px rgba(0, 0, 0, 0.3); transition: all 0.3s ease; opacity: 0.9;">
          {{! Clock visual on the left }}
          <div class="clock-visual" style="flex-shrink: 0; display: flex; align-items: center; justify-content: center;">
            <svg class="clock-svg" viewBox="0 0 100 100" width="80" height="80" style="opacity: 0.8; flex-shrink: 0;">
              <circle cx="50" cy="50" r="45" fill="none" stroke="#666" stroke-width="5"/>
              {{#if (eq clock.max 4)}}
                {{#if (gte clock.value 1)}}<path d="M50,50 L50,5 A45,45 0 0,1 95,50 Z" fill="{{clock.fillColor}}" stroke="#ffffff" stroke-width="2" opacity="0.6"/>{{/if}}
                {{#if (gte clock.value 2)}}<path d="M50,50 L95,50 A45,45 0 0,1 50,95 Z" fill="{{clock.fillColor}}" stroke="#ffffff" stroke-width="2" opacity="0.6"/>{{/if}}
                {{#if (gte clock.value 3)}}<path d="M50,50 L50,95 A45,45 0 0,1 5,50 Z" fill="{{clock.fillColor}}" stroke="#ffffff" stroke-width="2" opacity="0.6"/>{{/if}}
                {{#if (eq clock.value 4)}}<path d="M50,50 L5,50 A45,45 0 0,1 50,5 Z" fill="{{clock.fillColor}}" stroke="#ffffff" stroke-width="2" opacity="0.6"/>{{/if}}
              {{else if (eq clock.max 6)}}
                {{#if (gte clock.value 1)}}<path d="M50,50 L50,5 A45,45 0 0,1 87.5,27.5 Z" fill="{{clock.fillColor}}" stroke="#ffffff" stroke-width="2" opacity="0.6"/>{{/if}}
                {{#if (gte clock.value 2)}}<path d="M50,50 L87.5,27.5 A45,45 0 0,1 87.5,72.5 Z" fill="{{clock.fillColor}}" stroke="#ffffff" stroke-width="2" opacity="0.6"/>{{/if}}
                {{#if (gte clock.value 3)}}<path d="M50,50 L87.5,72.5 A45,45 0 0,1 50,95 Z" fill="{{clock.fillColor}}" stroke="#ffffff" stroke-width="2" opacity="0.6"/>{{/if}}
                {{#if (gte clock.value 4)}}<path d="M50,50 L50,95 A45,45 0 0,1 12.5,72.5 Z" fill="{{clock.fillColor}}" stroke="#ffffff" stroke-width="2" opacity="0.6"/>{{/if}}
                {{#if (gte clock.value 5)}}<path d="M50,50 L12.5,72.5 A45,45 0 0,1 12.5,27.5 Z" fill="{{clock.fillColor}}" stroke="#ffffff" stroke-width="2" opacity="0.6"/>{{/if}}
                {{#if (eq clock.value 6)}}<path d="M50,50 L12.5,27.5 A45,45 0 0,1 50,5 Z" fill="{{clock.fillColor}}" stroke="#ffffff" stroke-width="2" opacity="0.6"/>{{/if}}
              {{else}}
                <text x="50" y="55" font-size="16" text-anchor="middle" fill="#999">{{clock.value}}/{{clock.max}}</text>
              {{/if}}
            </svg>
          </div>

          {{! Clock details in the middle - flexible width }}
          <div class="clock-details" style="flex: 1 1 auto; display: flex; flex-direction: column; gap: 5px; min-width: 0; overflow: hidden;">
            <div class="clock-name" style="color: #f4a460; font-weight: bold; font-size: 1.1em; text-shadow: 1px 1px 2px rgba(0, 0, 0, 0.8); margin-bottom: 3px; white-space: nowrap; overflow: hidden; text-overflow: ellipsis;">{{clock.name}}</div>
            <div class="clock-progress" style="color: #d4a574; font-size: 0.9em; text-shadow: 1px 1px 2px rgba(0, 0, 0, 0.8); margin-bottom: 3px;">{{clock.value}} / {{clock.max}} â€¢ 
              {{#if (eq clock.category 'mission')}}<i class="fas fa-bullseye"></i> Misja{{/if}}
              {{#if (eq clock.category 'combat')}}<i class="fas fa-fist-raised"></i> Walka{{/if}}
              {{#if (eq clock.category 'other')}}<i class="fas fa-cogs"></i> Inne{{/if}}
            </div>
            <div class="clock-archived-date" style="color: #b8860b; font-size: 0.85em; font-style: italic; text-shadow: 1px 1px 2px rgba(0, 0, 0, 0.8); margin-bottom: 5px;">
              <i class="fas fa-calendar-times"></i> {{localize "COGSYNDICATE.ArchivedOn"}}: {{clock.archivedDate}}
            </div>
            {{#if clock.description}}
              <div class="clock-description" style="color: #d4a574; font-size: 0.85em; word-wrap: break-word; text-shadow: 1px 1px 2px rgba(0, 0, 0, 0.8); opacity: 0.9; line-height: 1.3;">{{clock.description}}</div>
            {{/if}}
          </div>

          {{! Action buttons on the right }}
          {{#if ../isGM}}
            <div class="archive-actions" style="display: flex; gap: 8px; flex-direction: column; justify-content: center; align-items: stretch; min-width: 140px; flex-shrink: 0; margin-left: auto;">
              <button class="restore-clock" data-index="{{index}}" title="{{localize 'COGSYNDICATE.RestoreClock'}}" style="background: linear-gradient(135deg, #2d4a2d 0%, #3d5a3d 50%, #2d4a2d 100%); border: 2px solid #65a30d; border-radius: 5px; color: #c8ff8c; padding: 8px 12px; font-weight: bold; font-size: 0.9em; text-shadow: 1px 1px 2px rgba(0, 0, 0, 0.8); box-shadow: inset 0 1px 2px rgba(101, 163, 13, 0.3), 0 2px 4px rgba(0, 0, 0, 0.4); cursor: pointer; transition: all 0.3s ease; white-space: nowrap; display: flex; align-items: center; justify-content: center; gap: 6px;">
                <i class="fas fa-undo"></i> {{localize "COGSYNDICATE.Restore"}}
              </button>
              <button class="delete-archived-clock" data-index="{{index}}" title="{{localize 'COGSYNDICATE.DeletePermanently'}}" style="background: linear-gradient(135deg, #4a2d2d 0%, #5a3d3d 50%, #4a2d2d 100%); border: 2px solid #dc2626; border-radius: 5px; color: #ffb8b8; padding: 8px 12px; font-weight: bold; font-size: 0.9em; text-shadow: 1px 1px 2px rgba(0, 0, 0, 0.8); box-shadow: inset 0 1px 2px rgba(220, 38, 38, 0.3), 0 2px 4px rgba(0, 0, 0, 0.4); cursor: pointer; transition: all 0.3s ease; white-space: nowrap; display: flex; align-items: center; justify-content: center; gap: 6px;">
                <i class="fas fa-trash-alt"></i> {{localize "COGSYNDICATE.Delete"}}
              </button>
            </div>
          {{/if}}
        </div>
      {{/each}}
    </div>
  {{/if}}
</div>
