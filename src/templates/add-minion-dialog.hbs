<form class="minion-dialog">
  <div class="form-group">
    <label>{{localize "COGSYNDICATE.MinionName"}}</label>
    <input type="text" name="name" value="{{minion.name}}" placeholder="Nazwa przybocznego" />
  </div>
  <div class="form-group">
    <label>{{localize "COGSYNDICATE.MinionRole"}}</label>
    <input type="text" name="role" value="{{minion.role}}" placeholder="Rola w organizacji" />
  </div>
  <div class="form-group">
    <label>{{localize "COGSYNDICATE.MinionDescription"}}</label>
    <textarea name="description" placeholder="Opis przybocznego">{{minion.description}}</textarea>
  </div>
</form>