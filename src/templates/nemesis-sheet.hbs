                {{/if}}
              </svg>
            </div>
            <div class="clock-details">
              <div class="clock-header">
                <span class="clock-name">{{localize "COGSYNDICATE.WeakeningClock"}}</span>
                <span class="clock-progress">{{system.clocks.weakening.value}} / {{system.clocks.weakening.max}}</span>
              </div>
              <div class="clock-actions">
                <button type="button" class="decrement-nemesis-clock small-btn" data-clock="weakening" title="Zmniejsz"><i class="fas fa-minus"></i></button>
                <button type="button" class="increment-nemesis-clock small-btn" data-clock="weakening" title="Zwiększ"><i class="fas fa-plus"></i></button>
              </div>
            </div>
          </div>

          <!-- Zegar Odwetu -->
          <div class="nemesis-clock-item">
            <div class="clock-visual">
              <svg class="nemesis-clock-svg" viewBox="0 0 100 100" width="100" height="100">
                <circle cx="50" cy="50" r="45" fill="none" stroke="#666" stroke-width="5"/>
                {{#if (eq system.clocks.revenge.max 6)}}
                  {{#if (gte system.clocks.revenge.value 1)}}<path d="M50,50 L50,5 A45,45 0 0,1 87.5,27.5 Z" fill="#8B5CF6" stroke="#ffffff" stroke-width="2"/>{{/if}}
