<form class="{{cssClass}}" autocomplete="off">
  <header class="sheet-header">
    <img class="profile-img" src="{{actor.img}}" data-edit="img" title="{{localize 'COGSYNDICATE.EditImage'}}" />
    <h1><input name="name" type="text" value="{{actor.name}}" placeholder="{{localize 'COGSYNDICATE.NemesisName'}}" class="centered" /></h1>
  </header>

  <section class="sheet-body">
    <!-- Nawigacja zakładek -->
    <nav class="sheet-tabs tabs" data-group="primary">
      <a class="item active" data-tab="main">Główne</a>
      <a class="item" data-tab="clocks">Zegary Nemezis</a>
      <a class="item" data-tab="minions">{{localize "COGSYNDICATE.MinionsTab"}}</a>
      <a class="item" data-tab="notes">{{localize "COGSYNDICATE.NotesTab"}}</a>
    </nav>

    <!-- Zawartość zakładek -->
    <section class="sheet-content">
      <!-- Zakładka Główne -->
      <div class="tab main active" data-group="primary" data-tab="main">
        <!-- Podstawowe informacje -->
        <div class="nemesis-info-section">
          <div class="form-group">
            <label>{{localize "COGSYNDICATE.InfluenceRange"}}:</label>
            <select class="influence-range-select" name="system.influenceRange">
              {{#each influenceOptions as |option|}}
                <option value="{{option.value}}" {{#if (eq ../system.influenceRange option.value)}}selected{{/if}}>{{option.label}}</option>
              {{/each}}
            </select>
          </div>

          <div class="form-group">
            <label>{{localize "COGSYNDICATE.MinionsCount"}}:</label>
            <span class="minions-count-display">{{minionsCount}}</span>
          </div>

          <div class="form-group">
            <label>{{localize "COGSYNDICATE.OrganizationType"}}:</label>
            <input type="text" name="system.organizationType" value="{{system.organizationType}}" />
          </div>

          <div class="form-group">
            <label>{{localize "COGSYNDICATE.LeaderDescription"}}:</label>
            <input type="text" name="system.leaderDescription" value="{{system.leaderDescription}}" />
          </div>

          <div class="form-group">
            <label>{{localize "COGSYNDICATE.OrganizationGoal"}}:</label>
            <textarea name="system.organizationGoal" rows="3">{{system.organizationGoal}}</textarea>
          </div>
        </div>

        <hr class="section-separator">
      </div>

      <!-- Zakładka Zegary Nemezis -->
      <div class="tab clocks" data-group="primary" data-tab="clocks">
