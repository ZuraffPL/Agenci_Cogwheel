      <!-- Zakładka Przyboczni -->
      <div class="tab minions" data-group="primary" data-tab="minions">
        <div class="minions-section">
          <h3 class="centered">{{localize "COGSYNDICATE.MinionsTab"}}</h3>
          <button type="button" class="add-minion-btn" title="{{localize 'COGSYNDICATE.AddMinion'}}">{{localize "COGSYNDICATE.AddMinion"}}</button>
          <div class="minions-list">
            {{#each system.minions as |minion index|}}
              <div class="minion-item" data-index="{{index}}">
                <div class="minion-header">
                  <span class="minion-name">{{minion.name}}</span>
                  <span class="minion-role">{{minion.role}}</span>
                </div>
                <div class="minion-description">{{minion.description}}</div>
                <div class="minion-actions">
                  <button type="button" class="edit-minion small-btn" title="{{localize 'COGSYNDICATE.EditMinion'}}"><i class="fas fa-edit"></i></button>
                  <button type="button" class="delete-minion small-btn" title="{{localize 'COGSYNDICATE.DeleteMinion'}}"><i class="fas fa-trash"></i></button>
                </div>
              </div>
            {{/each}}
            {{#unless system.minions.length}}
              <p>Brak przybocznych.</p>
            {{/unless}}
          </div>
        </div>
      </div>

      <!-- Zakładka Notatki -->
      <div class="tab notes" data-group="primary" data-tab="notes">
        <div class="notes-section">
          <h3 class="centered">{{localize "COGSYNDICATE.NotesTab"}}</h3>
          <textarea name="system.notes" rows="20" placeholder="Wpisz swoje notatki tutaj...">{{system.notes}}</textarea>
