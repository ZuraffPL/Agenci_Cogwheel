<form class="{{cssClass}}" autocomplete="off">
  <header class="sheet-header flexrow">
    <img class="profile-img" src="{{item.img}}" data-edit="img" title="{{item.name}}" alt="{{item.name}}" />
    <h1 class="centered"><input name="name" type="text" value="{{item.name}}" placeholder="Nazwa Archetypu" /></h1>
  </header>

  <section class="sheet-body">
    <div class="form-fields">
      <div class="form-group">
        <label>Stal</label>
        <input type="number" name="system.attributes.machine" value="{{system.attributes.machine}}" min="1" max="6" />
      </div>
      <div class="form-group">
        <label>Maszyna</label>
        <input type="number" name="system.attributes.engineering" value="{{system.attributes.engineering}}" min="1" max="6" />
      </div>
      <div class="form-group">
        <label>Intryga</label>
        <input type="number" name="system.attributes.intrigue" value="{{system.attributes.intrigue}}" min="1" max="6" />
      </div>
    </div>
  </section>
</form>